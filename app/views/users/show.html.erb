<% provide(:title, @user.name) %>

<h2><%= @user.email%>'s page is here</h2>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <span><strong>Current avatar:</strong></span>
      <img class="img-rounded" src="<%= @user.picture %>" />
    </div>
    <div class="col-md-4 col-md-offset-1">
      <ul class="list-unstyled">
        <li><h3><%= @user.name %></h3></li>
        <li>Email: <%= @user.email %></li>
        <li>Registration date: <%= @user.created_at.strftime('%F') %></li>
      </ul>
    </div>
  </div>
  <%= link_to 'Edit user data', edit_user_registration_path %>
</div>
